{
  "name": "boplmapdatabase",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "comment1": "Development scripts",
    "backend:dev": "nodemon ./backend/server.js",
    "frontend:dev": "cd ./frontend && npm run dev",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "comment2": "Production scripts",
    "backend:prod": "node ./backend/index.js",
    "frontend:prod": "cd ./frontend && vue-cli-service build && serve -s dist",
    "prod": "concurrently \"npm run backend:prod\" \"npm run frontend:prod\"",
    "commen3t": "Utility scripts",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "start": "npm run prod",
    "install": "npm install && cd ./frontend && npm install && cd .. && cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "serve": "^14.0.1"
  },
